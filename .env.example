INSTA_USERNAME=
INSTA_SESSIONID=

# Instagram Graph API (recommended)
FB_APP_ID=
FB_APP_SECRET=
FB_PAGE_ID=
IG_USER_ID=
FB_ACCESS_TOKEN=
PUBLIC_BASE_URL=
IMGBB_API_KEY=
IG_GRAPH_VERSION=v24.0
AUTO_TUNNEL=1

PIPER_BIN=
PIPER_MODEL=models/tr_TR-fahrettin-medium.onnx
PIPER_CONFIG=models/tr_TR-fahrettin-medium.onnx.json
PIPER_EN_MODEL=models/en_US-lessac-medium.onnx
PIPER_EN_CONFIG=models/en_US-lessac-medium.onnx.json
VIDEO_PIPER_MODEL=models/en_US-lessac-medium.onnx
VIDEO_PIPER_CONFIG=models/en_US-lessac-medium.onnx.json

# News memory backend: sqlite | json | mongodb
NEWS_MEMORY_BACKEND=sqlite
USED_NEWS_TTL_DAYS=7

# Optional custom paths
NEWS_MEMORY_DB_PATH=data/news_memory.db
NEWS_MEMORY_JSON_PATH=data/news_memory.json

# MongoDB settings (used when NEWS_MEMORY_BACKEND=mongodb)
NEWS_MEMORY_MONGO_URI=mongodb://localhost:27017
NEWS_MEMORY_MONGO_DB=atlas_ai
NEWS_MEMORY_MONGO_COLLECTION=used_news

# SD quality pipeline (works without changing these)
SD_RESTORE_FACES=1
SD_FACE_RESTORATION_MODEL=GFPGAN
SD_ENABLE_HIRES_FIX=0
SD_HIRES_SCALE=1.3
SD_HIRES_DENOISE=0.32
SD_HIRES_UPSCALER=Latent (antialiased)
SD_AUTO_BEST_HR_UPSCALER=1
SD_PREFERRED_HR_UPSCALERS=4x-UltraSharp,RealESRGAN 4x+,R-ESRGAN 4x+,Latent (antialiased)
SD_ENABLE_POST_UPSCALE=1
SD_POST_UPSCALE_FACTOR=1.15
SD_POST_UPSCALER=4x-UltraSharp
SD_ENABLE_ADDETAILER=1
SD_ADDETAILER_HUMAN_ONLY=1
SD_ADDETAILER_ENABLE_HANDS=1
SD_ADDETAILER_CONFIDENCE=0.30
SD_ADDETAILER_SKIP_ON_CROWD=1
SD_ENABLE_CONTROLNET=0
SD_CONTROLNET_WEIGHT=0.65
SD_CONTROLNET_GUIDANCE_START=0.0
SD_CONTROLNET_GUIDANCE_END=0.85
